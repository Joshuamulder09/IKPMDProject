<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:clipToPadding="false"
xmlns:card_view="http://schemas.android.com/apk/res-auto">


<android.support.v7.widget.CardView
    android:padding="5dp"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="300dp"
    android:layout_height="290dp"
    card_view:cardCornerRadius="2dp"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true"
    card_view:cardElevation="15dp">

    <TextView
        android:id="@+id/textv"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:padding="8dp"
        android:text="Deze quiz is gemaakt voor een verplicht keuzevak op school: IKPMD. Mijn opdracht is om een app te maken naar keuze. Ik heb gekozen voor een quiz omdat ik dan voor mijn studie dan kan leren met vragen die ik gemaakt heb. Tijdens de lessen hebben we geoefend met firebase, sqllite, visualisaties van data. In de opdracht moet je gewerkt hebben met firebase. Je moet alle data kunnen verwerken naar de database zowel online als offline. Ik vond het een leuke uitdaging en heb er veel van geleerd."
        android:textSize="16sp" />
</android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/textView11"
